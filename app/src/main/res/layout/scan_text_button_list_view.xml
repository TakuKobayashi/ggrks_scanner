<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scan_text_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/copy_clipboard_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_copy"
        android:text="@string/copy_clipboad_button_text"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_share"
        android:text="@string/share_button_text"
        android:layout_toRightOf="@+id/copy_clipboard_button"
        />

    <Button
        android:id="@+id/save_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_save"
        android:text="@string/save_file_button_text"
        android:layout_toRightOf="@+id/share_button"
        />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_search"
        android:text="@string/search_button_text"
        android:layout_toRightOf="@+id/save_file_button"
        />
</RelativeLayout>
